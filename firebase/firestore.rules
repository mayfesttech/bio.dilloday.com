rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /bio/content {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email in get(/databases/$(database)/documents/bio/admin).data.users;
    }
    
    match /members/{memberId} {
      allow read: if false;
      allow create, update: if request.resource.data.email == memberId;
      allow delete: if false;
    }

    match /bio/admin {
      allow read: if true;
      allow write: if false;
    }
  }
}
